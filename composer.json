{
    "name": "nowpayments/php-sdk",
    "description": "Official PHP SDK for NowPayments API - Accept cryptocurrency payments, manage subscriptions, handle payouts, and more",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nowpayments",
        "cryptocurrency",
        "payments",
        "bitcoin",
        "ethereum",
        "crypto",
        "sdk",
        "api"
    ],
    "authors": [
        {
            "name": "NowPayments",
            "email": "support@nowpayments.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "NowPayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NowPayments\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "cs-check": "phpcs src/",
        "cs-fix": "phpcbf src/",
        "stan": "phpstan analyse src/"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
